<% layout("layouts/boilerplate") %>
    <div class="container mt-2">
        <%- include("../partials/flash") %>
    </div>
    <div class="container d-flex justify-content-center align-items-center mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow-lg mb-5 rounded">
                    <img src="https://images.unsplash.com/photo-1549423506-90a675288ff1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" alt="ERROR" class="card-img-top">
                    <div class="card-body">
                        <h2 class="card-title">Sign up</h2>
                        <form action="/register" method="post" class="ui form">
                            <div class="field">
                                <label for="username"><i class="user secret icon" style="user-select: auto;"></i>Username</label>
                                <input type="text" name="username" id="username" placeholder="username" autofocus>
                            </div>
                            <div class="field">
                                <label for="email"><i class="envelope icon" style="user-select: auto;"></i>Email</label>
                                <input type="email" name="email" id="email" placeholder="email">
                            </div>
                            <div class="field">
                                <label for="passwword"><i class="key icon" style="user-select: auto;"></i>Password</label>
                                <input type="password" name="password" id="password" placeholder="password">
                            </div>
                            <button class="ui button">SignUp</button>
                            <a href="/campgrounds" class="ui button black">Cancel</a>
                            <div class="ui error message"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>